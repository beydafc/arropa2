<h3>All our products</h3>
<%= link_to "Go back", root_path %>
<hr>
<h1>Clothes</h1>
  <% @items.each do |item| %>
    <div>
      <%= cl_image_tag item.photo.key, height: 50, width: 50, crop: :fill %>
      <p><%= item.name %></p>
      <p>$<%= item.price.floor(2) %></p>
      <p><%= item.kind %></p>
      <p><%= link_to "See details", item_path(item.id)%></p>
    </div>
  <% end %>
