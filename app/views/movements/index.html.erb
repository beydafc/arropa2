<div class="index-header" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.7)), url(https://t3.ftcdn.net/jpg/01/38/94/62/360_F_138946263_EtW7xPuHRJSfyl4rU2WeWmApJFYM0B84.jpg);">
  <div class="header">
    <h1 style="font-weight:bolder; padding: 15px; margin-top: 20px; "><%= current_user.first_name %>'s movements</h1>
  </div>
    <div class="d-flex justify-content-center mt-3">
 <%= link_to "Back to profile", profile_path, class: "btn btn-ghost" %>
</div>
</div>





<div class="containter" style="display: flex;  padding-bottom: 45px;">


    <div class="flex" style="display: flex; margin-top: 20px; margin-bottom: 35px;">
        <div class="card" style="width: 18rem;">
          <div class="card-header">
            <h3>Bought Items</h3>
          </div>
        <ul class="list-group list-group-flush">
          <% current_user.movements.each do |compra| %>
          <li class="list-group-item"><h4><%= compra.item.name%></h4><p>On:<%= compra.purchase_date%></p></li>
          <% end %>
        </ul>
      </div>

      <div class="card" style="width: 18rem;">
        <div class="card-header">
          <h3>Sold Items</h3>
        </div>
        <ul class="list-group list-group-flush">
          <% @movements.each do |movimiento|%>
            <% item = movimiento.item %>
              <% if item.user_id == current_user.id %>
              <li class="list-group-item"><h4><%= item.name %></h4></li>
              <% end %>
            <% end %>
        </ul>
      </div>

    </div>



