<div class="justify-content-center" style="display: flex; margin-top: 20px; margin-bottom: 35px; margin-left: 40px;">
  <div class="card" style="width: 18rem;">
    <div class="card-header">
      <h2 class="text-center"><%= current_user.first_name %>'s profile</h2>
    </div>
    <div class="mt-3 ps-3">
      <ul class="list-unstyled">
        <li><%= current_user.email %></li>
        <li><%= current_user.first_name %> <%= current_user.last_name %></li>
        <li><%= current_user.phone_number %></li>
        <li><%= current_user.address %></li>
      </ul>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center">
    <ul class="list-group list-group-flush text-decoration-none text-center">
      <li class="list-group-item"><%= link_to "Sell clothes", new_item_path, class: "btn btn-primary mt-20px" %></li>
      <li class="list-group-item" ><%= link_to "My movements", movements_path, class: "btn btn-primary mt-20px" %></li>
      <li class="list-group-item" ><%= link_to "My items", user_items_path,class: "btn btn-primary mt-20px" %></li>
    </ul>
</div>
